{
  "set_server_mode": {
    "choices": {
      "unrestricted": "Unrestricted",
      "whitelist": "Whitelist",
      "blacklist": "Blacklist"
    },
    "responses": {
      "success": "Server response mode set to: {mode}"
    }
  },
  "set_channel_mode": {
    "choices": {
      "default": "Default (Follow Server)",
      "story": "Story Mode"
    },
    "responses": {
      "success": "Channel {channel} mode set to: {mode}",
      "reset": "Channel {channel} mode reset to default (follow server).",
      "already_default": "Channel {channel} is already using default mode."
    }
  },
  "add_channel": {
    "choices": {
      "whitelist": "Whitelist",
      "blacklist": "Blacklist"
    },
    "responses": {
      "success": "Channel {channel} added to {list_type}",
      "already_exists": "Channel {channel} already exists in {list_type}"
    }
  },
  "remove_channel": {
    "choices": {
      "whitelist": "Whitelist",
      "blacklist": "Blacklist"
    },
    "responses": {
      "success": "Channel {channel} removed from {list_type}",
      "not_found": "Channel {channel} not found in {list_type}"
    }
  },
  "auto_response": {
    "responses": {
      "success": "Channel {channel} auto response set to: {enabled}"
    }
  }
}
